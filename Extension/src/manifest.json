{
  "manifest_version": 3,
  "name": "PolicyPal",
  "description": "Summarises terms and conditions and privacy policies.",
  "version": "1.0",
  "action": {
    "default_popup": "HTML/popup.html",
    "default_icon": {}
  },
  "icons": {},
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "js": [
        "scripts/summariser.js"
      ],
      "type": "module",
      "matches": [
        "https://*/*"
      ]
    }
  ]
}
